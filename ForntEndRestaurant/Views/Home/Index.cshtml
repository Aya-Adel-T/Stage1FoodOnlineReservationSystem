@using WebApplication1.Models;
@model WebApplication1.Models.FoodServed
@{
    ViewData["Title"] = "Home Page";
}
<div class="container land text-center">
    <div class="row">
        <div class="col-6">
            <h1>
                The Best Restaurants In Your Home
            </h1>
            <p>Order food online in Egypt from hundreds of restaurants nearby</p>
            <div class="ch-order">
                <div class="form-group">
                    @Html.DropDownListFor(f => f.RestaurantID,  (SelectList)ViewBag.RestaurantList, "Choose a Restaurant", new { @class = "form-control" })
                </div>
                <button class="order-btn">
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrderFront" asp-action="Create">Order Now</a>
                </button>
            </div>

        </div>
        <div class="col-6 h-img">
            <img src="~/images/photo-1.png" />
            <img src="~/images/2.jpg" style="width:max-content" />
        </div>
    </div>
</div>